<h1>Edit {{book.title}} </h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}
<form action="/books/edit" method="POST" enctype="multipart/form-data">
    <div class="input-field">
        <input placeholder="Add book title" id="title" name="title" type="text" class="validate" required
            value="{{book.title}}">
        <span class="helper-text" data-error="write a book title"></span>
    </div>
    <div class="input-field">
        <input placeholder="Add book price" id="price" name="price" type="number" class="validate" required min="1"
            value="{{book.price}}">
        <span class="helper-text" data-error="write a book price"></span>
    </div>
    <div class="file-field input-field">
        <div class="row">
          
            <div class="col s6">
                <img class="avatar" src="/{{book.img}}" alt="image">
                
            </div>
            <div class="btn">
                <span>Book picture</span>
                <input type="file" id="img" name="img" >
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="add book picture" >
            </div>
        </div>
        <div class="input-field">
            <input placeholder="Add description" id="description" name="description" type="text" class="validate"
                value="{{book.description}}">

        </div>
        <input type="hidden" name="id" value="{{book.id}}">
        <input type="hidden" name="_csrf" value="{{csurf}}">
        <button type="submit" class="btn btn-primary">Looks very nice, like it</button>
</form>
<form action="/books/delete" method="post">
    <input type="hidden" name="id" value="{{book.id}}">
    <input type="hidden" name="_csrf" value="{{csurf}}">
    <button type="submit" class="btn red">Delete book</button>

</form>