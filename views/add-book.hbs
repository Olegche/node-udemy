<h1>Add new book</h1>
{{#if error}}
<p class='alert'>{{error}}</p>
{{/if}}
<form action="/add-book" method="POST" enctype="multipart/form-data">
    <div class="input-field">
        <input placeholder="Add book title" id="title" name="title" type="text" value="{{data.title}}" class="validate"
            required>
        <span class="helper-text" data-error="write a book title"></span>
    </div>
    <div class="input-field">
        <input placeholder="Add book price" id="price" name="price" type="number" value="{{data.price}}"
            class="validate" required min="1">
        <span class="helper-text" data-error="write a book price"></span>
    </div>
    <div class="file-field input-field">
        <div class="btn">
            <span>Book picture</span>
            <input type="file" id="bookpic" name="img">
        </div>
        <div class="file-path-wrapper">
            <input class="file-path validate" type="text" placeholder="add book picture">
        </div>
    </div>
    <div class="input-field">
        <input placeholder="Add description" id="description" name="description" type="text"
            value="{{data.description}}" class="validate">

        <button class="btn btn-primary add-to-cart" type="submit">Add new book</button>
    </div>

    <input type="hidden" name="_csrf" value="{{csurf}}">

</form>