<div class="row">
    <div class="col s6 offset-s3">
        {{#if error}}
        <p class="alert">
            {{error}}
        </p>

        {{/if}}

        <h1>
            New password
        </h1>
        <form action="/auth/new-password" method="POST">
            <div class="input-field">
                <input placeholder="password" id="password" name="password" type="password" class="validate" required>
                <span class="helper-text" data-error="create  new   password"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csurf}}">
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="token" value="{{token}}">

            <button class="btn btn-primary add-to-cart" type="submit">reset password</button>
        </form>
    </div>



</div>