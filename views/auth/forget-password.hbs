<div class="row">
    
        <div  class="col s6 offset-s3">
            {{#if error}}
            <p class="alert">
                {{error}}
            </p>

            {{/if}}

            
            <h1>
                Forget a password?
            </h1>
            <form action="/auth/forget-password" method="POST">
                <div class="input-field">
                    <input placeholder="example@gmail.com" id="email" name="email" type="email" class="validate"
                        required>
                    <span class="helper-text" data-error="Write email"></span>
                </div>
                
                <input type="hidden" name="_csrf" value="{{csurf}}">


                <button class="btn btn-primary add-to-cart" type="submit">reset password</button>
            </form>
        </div>
        

 
</div>